<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
	default-autowire="byName">

	<!-- iBatis DB Connection -->
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:database.properties</value>
				<value>classpath:${server.mode}.properties</value>
			</list>
		</property>		
	</bean>
	
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		p:driverClassName="${driver}" 
		p:url="${url}"
		p:username="${username}" 
		p:password="${password}" />

	<bean id="sqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean"
		p:dataSource-ref="dataSource" p:configLocation="classpath:SqlMapConfig.xml" />

	<bean id="propertySet" class="qrcs.util.config">
		<property name="test" value="${qrcs.test}" />	
		<property name="qrImageSavePath" value="${qrcs.qrImageSavePath}" />					
	</bean>
	
</beans>